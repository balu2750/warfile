---
- hosts: localhost
  vars:
    - serv_count: 0
  tasks:
    - name: creating a normal basic instance
      ec2:
           key_name: mykey
           instance_type: t2.micro
           image: ami-035be7bafff33b6b6
           wait: yes
           group: ansible securitygroup
           count: "{{serv_count}}"
           vpc_subnet_id: sub_id
           assign_public_ip: yes
           region: us-east-1
      register: output
